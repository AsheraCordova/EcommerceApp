    <style name="hyperlink">
        <item name="android:padding">3dp</item>
    </style>

    <style name="button_style" attrs="backgroundCapInsetsLeft-swt:30dp;backgroundCapInsetsRight-swt:30dp;backgroundCapInsetsLeft-web:30dp;backgroundCapInsetsRight-web:30dp;backgroundCapInsetsLeft-ios:30dp;backgroundCapInsetsRight-ios:30dp;">
        <item name="android:background">@drawable/common_9_button</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/color_red</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_style_red" attrs="backgroundCapInsetsLeft-swt:30dp;backgroundCapInsetsRight-swt:30dp;backgroundCapInsetsLeft-web:30dp;backgroundCapInsetsRight-web:30dp;backgroundCapInsetsLeft-ios:30dp;backgroundCapInsetsRight-ios:30dp;">
        <item name="android:background">@drawable/common_button_red_9</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_style_red_small" attrs="backgroundCapInsetsLeft-swt:15dp;backgroundCapInsetsRight-swt:15dp;backgroundCapInsetsLeft-web:15dp;backgroundCapInsetsRight-web:15dp;backgroundCapInsetsLeft-ios:15dp;backgroundCapInsetsRight-ios:15dp;">
        <item name="android:background">@drawable/common_button_red_small_9</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="form_edittext_style">
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="card_edittext_style">
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="form_password_style">
        <item name="android:paddingBottom">20dp</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:password">true</item>
    </style>

    <style name="main_layout">
        <item name="android:background">@color/color_gray_100</item>
    </style>

    <style name="category" attrs="borderColor:#cccccc;borderRadius:3dp; borderWidth:1dp;">
        <item name="android:background">#fff</item>
    </style>

    <style name="border_separator" attrs="borderColor:#fff;borderBottomWidth:1dp;"></style>

    <style name="image_logo">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@drawable/ashera_logo_no_resize</item>
    </style>

    <style name="notification_container_style" attrs="borderRadius:3dp">
        <item name="android:background">@color/bg_color</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="notification_text_style">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="card_style" attrs="borderRadius:5dp">
        <item name="android:background">#fff</item>
    </style>

    <style name="horizontal_border_separator">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">@color/color_gray_900</item>
    </style>

    <style name="rounded_textview" attrs="borderRadius:25dp">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/color_black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_layout">
        <item name="android:background">@color/color_white</item>
    </style>

    <style name="rounded_notification_style" attrs="borderRadius:10dp">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">#f00</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">7sp</item>
    </style>

    <style name="section_header">
        <item name="android:background">@color/color_gray_50</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>
