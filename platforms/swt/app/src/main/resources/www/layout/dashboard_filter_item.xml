<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <CheckBox
        android:id="@+id/name"
        style="@style/h2_black"
        modelPojoToUi="text = name from item->loopvar;checked = selected from item->loopvar;"
        modelSyncEvents="onCheckedChange"
        modelUiToPojo="selected = checked into item->loopvar as bool"
        onCheckedChange=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:text="Test123"
        tools:ignore="MissingPrefix"></CheckBox>
</FrameLayout>